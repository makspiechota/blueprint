{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/north-star",
  "title": "North Star Schema",
  "description": "Strategic vision layer defining enterprise mission and strategic goals",
  "type": "object",
  "metadata": {
    "layer": "north-star",
    "methodology": "Strategic planning / North Star framework",
    "purpose": "Define why the business exists and what effect it aims to achieve"
  },
  "required": ["type", "version", "last_updated", "title", "vision", "problem", "solution", "strategic_goals"],
  "properties": {
    "type": {
      "type": "string",
      "const": "north-star",
      "description": "Layer type identifier"
    },
    "version": {
      "type": "string",
      "description": "DSL version"
    },
    "last_updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Last update date in ISO format (YYYY-MM-DD)"
    },
    "title": {
      "type": "string",
      "description": "Product or company name"
    },
    "vision": {
      "type": "string",
      "description": "Future state and transformation you're working toward"
    },
    "problem": {
      "type": "string",
      "description": "High-level challenges and pain points you're addressing"
    },
    "solution": {
      "type": "string",
      "description": "High-level approach to solving the problem"
    },
    "strategic_goals": {
      "type": "array",
      "description": "Top-level objectives (3-5 recommended)",
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Short, memorable goal name"
          },
          "description": {
            "type": "string",
            "description": "What success looks like for this goal"
          }
        }
      }
    }
  }
}
