{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/architectural-scope",
  "title": "Architectural Scope Schema",
  "description": "Solution boundaries layer using six scope lists to box the business solution space",
  "type": "object",
  "metadata": {
    "layer": "architectural-scope",
    "methodology": "Ronald Ross / Zachman Framework",
    "purpose": "Define solution boundaries before technical implementation"
  },
  "required": ["type", "version", "last_updated", "title", "north_star_ref"],
  "properties": {
    "type": {
      "type": "string",
      "const": "architectural-scope",
      "description": "Layer type identifier"
    },
    "version": {
      "type": "string",
      "description": "DSL version"
    },
    "last_updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Last update date in ISO format (YYYY-MM-DD)"
    },
    "title": {
      "type": "string",
      "description": "Product or company name"
    },
    "north_star_ref": {
      "type": "string",
      "description": "Path to north star YAML file"
    },
    "what": {
      "type": "array",
      "description": "Business entities and information objects",
      "scopeQuestion": "What are the business data, information, or objects?",
      "sizing": {"min": 3, "max": 12, "optimal": 7},
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "how": {
      "type": "array",
      "description": "Business processes and mechanisms",
      "scopeQuestion": "How does the business work?",
      "sizing": {"min": 3, "max": 12, "optimal": 7},
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "where": {
      "type": "array",
      "description": "Geographic locations and operational boundaries",
      "scopeQuestion": "Where are the business operations?",
      "sizing": {"min": 3, "max": 12, "optimal": 7},
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "who": {
      "type": "array",
      "description": "Organizational units and stakeholder groups",
      "scopeQuestion": "Who are the people and organizations involved?",
      "sizing": {"min": 3, "max": 12, "optimal": 7},
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "when": {
      "type": "array",
      "description": "Critical timing constraints and business cycles",
      "scopeQuestion": "When are business processes performed?",
      "sizing": {"min": 3, "max": 12, "optimal": 7},
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    },
    "why": {
      "type": "array",
      "description": "Business mission and ongoing business goals",
      "scopeQuestion": "Why is this solution chosen? What motivates decisions?",
      "sizing": {"min": 3, "max": 12, "optimal": 7},
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    }
  },
  "relationships": {
    "requires": ["north-star"],
    "description": "Architectural scope builds upon and references a north star"
  }
}
